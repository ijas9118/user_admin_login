<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= pageTitle %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body class="bg-light">
    <!-- NAVBAR -->
    <%- include('./partials/nav.ejs') %>

    <main class="container">
      <h1 class="my-4 text-center">User Details</h1>
      <div class="row justify-content-center">
        <div class="col-md-8">
          <form action="/search" method="POST">
            <div class="input-group mb-3">
              <input
                type="hidden"
                name="searchType"
                id="searchType"
                value="Name"
              />
              <button
                class="btn btn-dark dropdown-toggle"
                id="dropdownButton"
                type="button"
                style="border-radius: 8px 0px 0px 8px"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Name
              </button>
              <ul class="dropdown-menu">
                <li>
                  <a
                    class="dropdown-item"
                    onclick="changeButtonText(this, 'Name')"
                    >Name</a
                  >
                </li>
                <li>
                  <a
                    class="dropdown-item"
                    onclick="changeButtonText(this, 'Email')"
                    >Email</a
                  >
                </li>
              </ul>
              <input
                type="text"
                class="form-control"
                placeholder="Search User"
                aria-label="Search User"
                aria-describedby="basic-addon1"
                name="searchValue"
                required
              />
              <button class="btn btn-primary" type="submit" id="button-addon2">
                Search
              </button>
            </div>
          </form>
        </div>
      </div>
      <div class="row justify-content-center mb-3">
        <div class="text-end col-md-8">
          <a href="/add-user" class="btn btn-success">
            <i class="fa-solid fa-plus"></i> Add New User
          </a>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="col-md-8">
          <% users.forEach(function(user) { %>
          <div class="card mb-4">
            <div
              class="card-body d-flex justify-content-between align-items-center"
            >
              <div>
                <h5 class="card-title"><%= user.name %></h5>
                <p class="card-text">
                  <strong>Email:</strong> <%= user.email %>
                </p>
              </div>
              <div>
                <a href="/edit/<%= user._id %>" class="btn btn-link"
                  ><i
                    class="fa-solid fa-pen-to-square"
                    style="color: #3a7d5a"
                  ></i
                ></a>
                <a
                  href="/delete/<%= user._id %>"
                  class="btn btn-link text-danger"
                  ><i class="fa-solid fa-trash" style="color: #d73b62"></i
                ></a>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </main>

  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
  <script>
    function changeButtonText(element, type) {
      document.getElementById("dropdownButton").textContent =
        element.textContent;
      document.getElementById("searchType").value = type;
    }
  </script>
</html>
